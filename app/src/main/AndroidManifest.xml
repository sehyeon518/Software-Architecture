<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kcampusmanager"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/kcampusmanager"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kcampusmanager_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KCampusManager"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".ManagerActivity"/>
        <activity android:name=".StudentActivity"/>
        <activity android:name=".ClassScheduleActivity"/>
        <activity android:name=".InquireLedgerActivity"/>
        <activity android:name=".LedgerHistoryActivity"/>
        <activity android:name=".SubmitLedgerActivity"/>
        <activity android:name=".ClassOpenCloseActivity"/>
        <activity android:name=".HelperCheckinActivity"/>
        <activity android:name=".HelperScheduleActivity"/>
        <activity android:name=".LedgerAcceptDialog" android:theme="@android:style/Theme.Dialog"/>

    </application>

</manifest>